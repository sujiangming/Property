<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_parent"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/colorAccent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btn_sub_menu_left"
        android:layout_width="92dp"
        android:layout_height="match_parent"
        android:background="@drawable/set_btn_press"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_sub_menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sub_menu_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="标题"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/llWaitToUseId"
        android:layout_width="92dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btn_sub_menu_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/set_btn_press"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_right_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_wait_use_circle_mark"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/user_red_info_circle"
                android:gravity="center"
                android:text="0+"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>